pipeline {
    agent any
    environment {
        PATH = "/usr/share/dotnet:/usr/bin:${PATH}"
    }


    stages {

        stage('Detect Stage') {
            steps {
                script {
                    if (env.BRANCH_NAME == "dev") {
                        STAGE = "dev"
                    } else if (env.BRANCH_NAME == "qa") {
                        STAGE = "qa"
                    } else if (env.BRANCH_NAME == "hmg") {
                        STAGE = "hmg"
                    } else if (env.BRANCH_NAME == "prod") {
                        STAGE = "prod"
                    } else {
                        error("Branch '${env.BRANCH_NAME}' não mapeada.")
                    }

                    STACK_NAME = "lambda-testapp-${STAGE}"

                    echo "Stage detectada = ${STAGE}"
                    echo "Stack            = ${STACK_NAME}"
                }
            }
        }

        stage('Discover WebhookName From Stack Output') {
            steps {
                script {
                    WEBHOOK_NAME = sh(
                        script: """
                            aws cloudformation describe-stacks --stack-name ${STACK_NAME} --query "Stacks[0].Outputs[?OutputKey=='WebhookName'].OutputValue" --output text
                        """,
                        returnStdout: true
                    ).trim()

                    if (!WEBHOOK_NAME || WEBHOOK_NAME == "None") {
                        error("O output 'WebhookName' não foi encontrado na stack ${STACK_NAME}")
                    }

                    echo "WebhookName detectado: ${WEBHOOK_NAME}"
                }
            }
        }
        stage('Check dotnet') {
            steps {
                sh "which dotnet || true"
                sh "dotnet --info || true"
                sh "echo PATH=\$PATH"
            }
        }   
        stage('Build Function') {
            steps {
                sh """
                    sam build \
                      --parameter-overrides Stage=${STAGE}
                """
            }
        }

        stage('Deploy Function') {
            steps {
                sh """
                    sam deploy \
                      --stack-name ${STACK_NAME} \
                      --capabilities CAPABILITY_IAM \
                      --no-confirm-changeset \
                      --resolve-s3 \
                      --parameter-overrides Stage=${STAGE}
                """
            }
        }
    }
}
