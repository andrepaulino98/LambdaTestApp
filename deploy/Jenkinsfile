pipeline {
    agent any

    stages {

        stage('Detect Stage') {
            steps {
                script {
                    if (env.BRANCH_NAME == "dev") {
                        STAGE = "dev"
                    } else if (env.BRANCH_NAME == "qa") {
                        STAGE = "qa"
                    } else if (env.BRANCH_NAME == "hmg") {
                        STAGE = "hmg"
                    } else if (env.BRANCH_NAME == "prod") {
                        STAGE = "prod"
                    } else {
                        error("Branch '${env.BRANCH_NAME}' não mapeada.")
                    }

                    STACK_NAME = "lambda-testapp-${STAGE}"

                    echo "Stage detectada = ${STAGE}"
                    echo "Stack            = ${STACK_NAME}"
                }
            }
        }

        stage('Discover Function Name From Stack Tags') {
            steps {
                script {
                    FUNCTION_NAME = sh(
                        script: """
                            aws cloudformation describe-stacks \
                                --stack-name ${STACK_NAME} \
                                --query "Stacks[0].Tags[?Key=='Name'].Value | [0]" \
                                --output text
                        """,
                        returnStdout: true
                    ).trim()

                    if (!FUNCTION_NAME || FUNCTION_NAME == "None") {
                        error("A tag 'Name' não foi encontrada na stack ${STACK_NAME}")
                    }

                    echo "Função detectada: ${FUNCTION_NAME}"
                }
            }
        }

        stage('Build Function') {
            steps {
                sh """
                    sam build \
                      --parameter-overrides Stage=${STAGE}
                """
            }
        }

        stage('Deploy Function') {
            steps {
                sh """
                    sam deploy \
                      --stack-name ${STACK_NAME} \
                      --capabilities CAPABILITY_IAM \
                      --no-confirm-changeset \
                      --resolve-s3 \
                      --parameter-overrides Stage=${STAGE}
                """
            }
        }
    }
}
